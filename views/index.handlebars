{{#each articles}}
<div class="articlecard text-center" id={{this._id}}>

<h2>
    <a href="{{this.url}}" target="_blank">{{this.title}}</a>
    
</h2>
<img src="{{this.imgURL}}">
<p class="articlesummary">
    {{this.summary}}
</p>
<form action="/save/{{this.id}}" method="POST"> 
    <button type="submit" class="btn btn-secondary btn-sm">
        Save Article
        </button>
  </form>
    <button type="button" class="btn btn-secondary btn-sm" id="addComment" value="{{this._id}}">Add Comment</button>

    
</div>
{{/each}}
