    <div class="container-fluid" id="nSH">
    <div class="row">

      <div class="col-1">
        <form action="/scrape", method="GET">
            <a href="/scrape"><button type="button" class="btn btn-secondary" >Scrape</button></a>
        </form>
      </div>

      <div class="col-1">
        <form action="/saved", method="GET" href="/saved">
            <a href="/saved"><button type="button" class="btn btn-secondary">Saved</button></a>
        </form>
      </div>

    <div class="col-8 text-center">
      <h2>New York Times Scraper</h2>
